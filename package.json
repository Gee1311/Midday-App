{
  "name": "absplatform",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "packages/email/*"
  ],
  "scripts": {
    "prepare": "husky",
    "commit": "cz",
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "test": "turbo test --parallel",
    "start:dashboard": "turbo start --filter=@absplatform/dashboard",
    "start:website": "turbo start --filter=@absplatform/website",
    "dev:api": "turbo dev --filter=@absplatform/api",
    "dev:dashboard": "turbo dev --filter=@absplatform/dashboard",
    "build:dashboard": "turbo build --filter=@absplatform/dashboard",
    "dev:engine": "turbo dev --filter=@absplatform/engine",
    "dev:website": "turbo dev --filter=@absplatform/website ",
    "dev:desktop": "turbo dev --filter=@absplatform/desktop",
    "jobs:dashboard": "turbo jobs --filter=@absplatform/dashboard",
    "format": "biome format --write .",
    "lint": "turbo lint && manypkg check",
    "typecheck": "turbo typecheck"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.1",
    "@manypkg/cli": "^0.21.4",
    "turbo": "2.1.2",
    "typescript": "^5.6.2"
  },
  "packageManager": "bun@1.1.27",
  "resolutions": {
    "jackspeak": "2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}